<h3 class="center">Designs</h3>

<div class="container gallery_c">
    <div class="carousel #carousel-slider center">
        <% @design_top.each do |design| %>
            <% design.photos.each do |top| %>
                <%= image_tag(top, class: 'carousel-item next-click') %>
            <% end %>
        <% end %>
    </div>
</div>

<div class="container services">
    <h4 class="center">Services Offered</h4>
    <div class="row">
        <% @services.each do |service| %>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content">
                    <div class="card-title">
                        <a href="#!"><i class="material-icons">grade</i>
                        </a>
                        <span>
                            <%= service.name %></span>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

<div class="row">
    <% @designs.each do |design| %>
    <% if design.photos != nil %>
    <% design.photos.each do |photo| %>
    <div class="col s12 m3">
        <div class="card">
            <div class="card-image">
                <%# image = MiniMagick::Image.open(url_for(design.photo)) %>
                <%#= image_tag design.photo.variant(resize_to_fit: [100, 100]), class: 'materialboxed responsive-img' %>
                <%#= image_tag design.photo.variant(resize: "1000x1000", flip: nil), size: "200x200", class: 'materialboxed responsive-img' %>

                <%= image_tag(photo, class: 'materialboxed responsive-img') %>

                <span class="card-title">
                    <%#= design.name %></span>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
</div>