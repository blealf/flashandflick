    <% @facebook = About.where(social: "Facebook").first %>
    <% @instagram = About.where(social: "Instagram").first %>
    <% @googleplus = About.where(social: "Google Plus").first %>
    <% @twitter= About.where(social: "Twitter").first %>

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large #e0e0e0 grey darken-4">
            <i class="large material-icons #e0e0e0">chat</i>
        </a>
        <ul>
            <% if @facebook.present? %>
                <li><a class="btn-floating blue" target="_blank" href="<%= @facebook.link %>"><i class="fab fa-facebook-f"></i></a></li>
            <% else %>
                <li><a class="btn-floating blue"><i class="fab fa-facebook-f"></i></a></li>
            <% end %>

            <% if @googleplus.present? %>
                <li><a class="btn-floating red darken-1" target="_blank" href="
                <%= @googleplus.link %>"><i class="fab fa-google-plus-g"></i></a></li>
            <% else %>
                <li><a class="btn-floating red darken-1"><i class="fab fa-google-plus-g"></i></a></li>
            <% end %>

            <% if @twitter.present? %>
                <li><a class="btn-floating blue" target="_blank" href="
                <%= @twitter.link %>"><i class="fab fa-twitter"></i></a></li>
            <% else %>
                <li><a class="btn-floating blue"><i class="fab fa-twitter"></i></a></li>
            <% end %>

            <% if @instagram.present? %>
                <li><a class="btn-floating brown" target="_blank" href="
                <%= @instagram.link %>"><i class="fab fa-instagram"></i></a></li>
            <% else %>
                <li><a class="btn-floating brown"><i class="fab fa-instagram"></i></a></li>
            <% end %>
        </ul>
